<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bread.first.vedderplet.fbread.Menu"
    tools:showIn="@layout/activity_menu"
    android:background="#dbb67f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BreakBread"
        android:id="@+id/breakBreadText"
        android:autoText="false"
        android:textColor="#8c4419"
        android:textSize="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/chaseButton"
        android:layout_alignStart="@+id/chaseButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready To Break"
        android:id="@+id/chaseButton"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/breakBreadText"
        android:layout_centerHorizontal="true"
        android:onClick="chase"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Settings"
        android:id="@+id/profileButton"
        android:layout_below="@+id/chaseButton"
        android:layout_alignLeft="@+id/breakBreadText"
        android:layout_alignStart="@+id/breakBreadText"
        android:layout_marginTop="120dp"
        android:onClick="profile"
        android:layout_alignRight="@+id/chaseButton"
        android:layout_alignEnd="@+id/chaseButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchButton"
        android:layout_below="@+id/chaseButton"
        android:layout_alignRight="@+id/chaseButton"
        android:layout_alignEnd="@+id/chaseButton"
        android:layout_marginTop="37dp"
        android:layout_alignLeft="@+id/profileButton"
        android:layout_alignStart="@+id/profileButton"
        android:onClick="search"/>

</RelativeLayout>
